        <aside>
            <h1>Chat</h1>
            <form method="post">
                <input type="text" asp-for="NewChatMessage" placeholder="Type Message Here..." />
                <button type="submit" asp-page-handler="Chat">Send</button>
            </form>
            <div class="chat-messages">
                @foreach (var message in Model.ChatMessages)
                {
                    <div class="message">
                        <strong>@message.Username:</strong> @message.Message - @message.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")
                    </div>
                }
            </div>
        </aside>
@* Create Collab *@
        <section class="col-md-8">
            <h2>Create a New Collaboration Area</h2>
            <form method="post">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" @* asp-for="NewCollab.Name" *@ placeholder="Enter New Collaboration Area Name" />
                    <button class="btn btn-success" type="submit" asp-page-handler="Create">Create</button>
                </div>
            </form>
@* Include Knowledge Item *@
            <h2>Include Knowledge Item</h2>
            <form method="post">
                <div class="input-group mb-3">
                    <select class="form-select" asp-for="SelectKnowledgeItem" asp-items="Model.SelectKnowledgeItem">
                        <option value="">Choose an Item</option>
                    </select>
                    <button class="btn btn-info" type="submit" asp-page-handler="AddKnowledge">Include</button>
                </div>
            </form>
        </section>
    </div>
</div>
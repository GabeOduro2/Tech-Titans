@page
@using System.Data.SqlClient
@using Lab3.Pages.DB
@model Lab3.Pages.Collaboration.DBDisplayModel
@{
}

<form method="post">
    <input asp-for="IsChecked"  class="btn btn-primary"/>
    <button class="btn btn-primary">Swap Table</button>
</form>

@{
    if (Model.IsChecked == false)
    {
        <table class="table table-bordered table-responsive table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>State:</th>
                    <th>Feet:</th>
                    <th>Inches:</th>
                </tr>
            </thead>
            <tbody>
                @{
                    string sqlQuery = "select * from StateHeight";

                    SqlDataReader PurchaseReader = DBClass.GeneralReaderQuery(sqlQuery);

                    while (PurchaseReader.Read())
                    {
                        <tr>
                            <td>@PurchaseReader["State"]</td>
                            <td>@PurchaseReader["Feet"]</td>
                            <td>@PurchaseReader["Inches"]</td>
                        </tr>
                    }
                    DBClass.Lab3DBConnection.Close();
                }
            </tbody>
        </table>
    }
    else
    {

        <table class="table table-bordered table-responsive table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>City:</th>
                    <th>Population:</th>
                    <th>Average Number of Pets:</th>
                </tr>
            </thead>
            <tbody>
                @{
                    string sqlQuery = "select * from CityPopulation";

                    SqlDataReader PurchaseReader = DBClass.GeneralReaderQuery(sqlQuery);

                    while (PurchaseReader.Read())
                    {
                        <tr>
                            <td>@PurchaseReader["City"]</td>
                            <td>@PurchaseReader["Population"]</td>
                            <td>@PurchaseReader["Average Number of Pets"]</td>
                        </tr>
                    }
                    DBClass.Lab3DBConnection.Close();
                }
            </tbody>
        </table>

    }
}


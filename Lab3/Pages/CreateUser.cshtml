@page
@model CreateUserModel
@{
    ViewData["Title"] = "Sign Up for New Account";
}
<div class="container">
    <div class="row">
        <div class="col">
        </div>
        <div class="col">
            <img src="images/madisoncounty.png" alt="Image" class="img-fluid mb-4">
        </div>
        <div class="col">
        </div>
    </div>
</div>

<h1>Sign Up for New Account</h1>
<form asp-page="CreateUser" method="post" class="needs-validation" novalidate>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="NewUser.Username">Enter New Username</label>
            <input asp-for="NewUser.Username" placeholder="Username:" class="form-control" />
            <span asp-validation-for="NewUser.Username" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="NewUser.Password">Enter New Password</label>
            <input asp-for="NewUser.Password" placeholder="Password:" class="form-control" />
            <span asp-validation-for="NewUser.Password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="NewUser.FirstName">Enter New First Name</label>
            <input asp-for="NewUser.FirstName" placeholder="First Name:" class="form-control" />
            <span asp-validation-for="NewUser.FirstName" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="NewUser.LastName">Enter New Last Name</label>
            <input asp-for="NewUser.LastName" placeholder="Last Name:" class="form-control" />
            <span asp-validation-for="NewUser.LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="NewUser.Email">Enter New Email Address</label>
            <input asp-for="NewUser.Email" placeholder="Email:" class="form-control" />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="NewUser.Phone">Enter New Phone Number</label>
            <input asp-for="NewUser.Phone" placeholder="Phone #:" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="NewUser.Address">Enter New Address</label>
        <input asp-for="NewUser.Address" placeholder="Address:" class="form-control" style="width: 650px;" />
    </div>
    <div class="form-group">
        <label asp-for="NewUser.UserType">Enter New Type</label>
        <input asp-for="NewUser.UserType" placeholder="Type:" class="form-control" style="width: 325px;" />
        <span asp-validation-for="NewUser.UserType" class="text-danger"></span>
    </div>

    @{
        if (Model.CreateMessage != null)
        {
            <p> @Model.CreateMessage</p>
        }
    }
    <div class="form-group">
        <input type="submit" value="Sign Up ->" class="btn btn-primary" />
        <button class="btn btn-outline-secondary" asp-page-handler="Clear">Clear</button>
    </div>
</form>